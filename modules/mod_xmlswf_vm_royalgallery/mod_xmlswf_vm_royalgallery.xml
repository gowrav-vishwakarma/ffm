<?xml version="1.0" encoding="utf-8"?><install type="module" version="1.5.0"><name>XML/SWF VM Royal Gallery Slide Show</name><creationDate>2010-29-03</creationDate><author>XML/SWF</author><authorEmail>xmlswf@gmail.com</authorEmail><authorUrl>http://xmlswf.com</authorUrl><copyright>All rights reserved by XML/SWF 2010</copyright><license>GPL 2.0</license><version>1.1</version><description>XML/SWF VM Royal Gallery Slide Show</description>    <!-- Listing of all files that should be installed for the module to function -->        <files>        <!-- The "module" attribute signifies that this is the main controller file -->		<filename module="mod_xmlswf_vm_royalgallery">mod_xmlswf_vm_royalgallery.php</filename>		<filename module="mod_xmlswf_vm_royalgallery">index.html</filename>		<filename module="mod_xmlswf_vm_royalgallery">gallery.swf</filename>		<filename module="mod_xmlswf_vm_royalgallery">AC_RunActiveContent.js</filename>		</files><params> <param name="category_id" type="text" default="0" label="Category Id" description="Enter comma seperated Category Id's you would like to display products related to a perticular Category. 0 for showing all products and all categories" /> <param name="load_curr" type="list" default="1" label="Load current category images" description="Load current category images" > 	<option value="1">yes</option>	<option value="2">no</option></param><param name="bannerWidth" type="text" default="645" label="Gallery Width (px)" description="Width of object."/><param name="bannerHeight" type="text" default="725" label="Gallery Height (px)" description="Height of object."/><param name="backgroundColor" type="text" default="#ffffff" label="Object Background color" description="For example: #ffffff. Slect wmode transperant if you dont want background color"/><param name="images_path" type="text" default="components/com_virtuemart/shop_image/product/" label="Images Path" description="Contains the relative path to the images folder, which will be used by the final Flash. ex. images/stories/images/ " /> <param name="wmode" type="list" default="window" label="wmode" description="Select the wmode of flash">	<option value="opaque">opaque</option>	<option value="transparent">transparent</option>	<option value="window">window</option></param><param name="tsize" type="text" default="14" label="Title font size" description="Title font size"/><param name="scolour" type="text" default="0x666666" label="Scroll Collor" description="Scroll Collor"/><param name="bgcolour" type="text" default="0xffffff" label="Gallery Background Color" description="Scroll Color"/><param name="textcolour" type="text" default="0x333333" label="Text Color" description="Text Color"/><param name="bordercolour" type="text" default="0xCCCCCC" label="Border Color" description="Border Color"/><param name="thumbscale" type="list" default="1" label="Thumb Scale" description="Thumb Scale" > 	<option value="1">yes</option>	<option value="2">no</option></param><param name="imagescale" type="list" default="1" label="Image Scale" description="Image Scale" > 	<option value="1">yes</option>	<option value="2">no</option></param><param name="showdesc" type="list" default="2" label="Show Description" description="Show Description" > 	<option value="1">yes</option>	<option value="2">no</option></param><param name="show_price" type="list" default="yes" label="Show Price" description="Select yes or no to show or hide price" > 	<option value="yes">yes</option>	<option value="no">no</option></param><param name="currency" type="text" default="$" label="Currency Symbol" description="Currency Symbol" />  <param name="pricetax" type="list" default="yes" label="Display prices with tax" description="Display prices with tax">	<option value="yes">yes</option>	<option value="no">no</option></param><param name="catppv_flag" type="list" default="2" label="Fix IE cache bug" description="IE cache bug: Different instances of module shows only the first one loaded category. If enabled different categories and swf file names will be created for each shown category." > 	<option value="1">yes</option>	<option value="2">no</option></param></params></install>