			<param name="mega_module_style" type="text" default="xhtml" label="Style Modules" description="Style Modules" />
			<param name="mega_subcontent-mod-modules" type="modules" default="0" label="Select Modules" description="Select Modules Desc" />
			<param name="mega_subcontent-pos-positions" type="positions" default="0" label="Select Positions" description="Select Positions Desc" />			
		</params>
	</state>
</metadata>