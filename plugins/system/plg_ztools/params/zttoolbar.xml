<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<state>
		<name>Component</name>
		<description>Component Parameters</description>
		<params group="mega" label="Parameters (Mega Menu Parameters)" addpath="/plugins/system/plg_ztools/element">
			<param name="@group2" type="ztparamhelper" hideRow="true" value="mega_subcontent" description="ZTools Extended Parameters, user with Megamenu"/>
			<param name="mega_showtitle" type="radio" default="1" label="Show Title" description="Show Title Desc">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			<param name="mega_desc" type="textarea" rows="5" cols="40" default="" label="Description" description="Description Desc" />
			<param name="mega_cols" type="text" size="30" default="1" label="Columns" description="Columns Desc" />
			<param name="mega_group" type="radio" default="0" label="Group" description="Group Desc">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
			<param name="mega_width" type="text" size="30" default="" label="Submenu Width" description="Submenu Width Desc" />
			<param name="mega_colw" type="text" size="30" default="" label="Submenu Column Width" description="Submenu Column Width Desc" />
